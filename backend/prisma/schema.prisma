generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Kudo Board
model KudoBoard {
  id        Int        @id @default(autoincrement())
  title     String
  category  String
  author    String?
  createdAt DateTime?
  kudoCards KudoCard[]
}

//Kudo Card
model KudoCard {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  gifUrl      String
  upvotes     Int
  createdAt   DateTime?
  owner       String?
  board       KudoBoard @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId     Int
  comments    Comment[]
}

//Coment Model
model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime
  author    String
  kudo      KudoCard @relation(fields: [kudoId], references: [id], onDelete: Cascade)
  kudoId    Int
}
