generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Kudo Board
model KudoBoard {
  id        Int        @id @default(autoincrement())
  title     String
  category  String
  author    String?
  kudoCards KudoCard[]
}

//Kudo Card
model KudoCard {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  gifUrl      String
  upvotes     Int
  owner       String?
  board       KudoBoard @relation(fields: [boardId], references: [id])
  boardId     Int
}
